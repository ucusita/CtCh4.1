<?xml version='1.0' encoding='utf-8'?>
<widget id="com.infotronica.prontotaxichofer" version="4.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pronto Taxi Chofer</name>
    <description>
        Recibe los pedidos autom√°ticamente en tu movil.
    </description>
    <author email="marcelofabio01@yahoo.com.ar" href="http://www.radargps.com.ar">
        Infotronica
    </author>

    <preference name="auto-hide-splash-screen" value="false" />    
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="7000" />
    <preference name="SplashScreen" value="screen" />

    <preference name="orientation" value="portrait" />

    <platform name="android">
        <!-- you can use any density that exists in the Android project -->
        <splash src="res/screen/android/screen-hdpi-portrait.png" density="port-hdpi"/>
        <splash src="res/screen/android/screen-ldpi-portrait.png" density="port-ldpi"/>
        <splash src="res/screen/android/screen-mdpi-portrait.png" density="port-mdpi"/>
        <splash src="res/screen/android/screen-xhdpi-portrait.png" density="port-xhdpi"/>
    </platform>

    <content src="index.html" />
    <icon src="icon.png" />

    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
            
</widget>